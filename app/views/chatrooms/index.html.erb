<body class="all">
  
  <div class="chatroom container d-flex">

    <%= "<br><br><br><h1>You do not have any chatrooms</h1>".html_safe if @chatrooms.size == 0 %>
          <% @chatrooms.each do |chatroom| %>
          <div class="chatbox m-3 w-25 border border-primary">
                        <% chatroom.messages.each do |message| %>
                                  <div class="m-2 message d-flex border-bottom ">
                                    <div class="userinfo flex-column mr-4">
                                      <div class="text-center">
                                        <% tag = 'defaultavatar' %>
                                        <% tag = message.user.avatar.key if message.user.avatar.attached? == true %>
                                        <%= cl_image_tag tag, class: "avatar" %>
                                      </div>
                                      <div class="text-center">
                                        <%= message.user.first_name %>
                                      </div>
                                    </div>
                                      <div class="messagebox flex-grow-1 d-flex flex-column bd-highlight">
                                        <div class="messagetext text-left">
                                          <%= message.content %>
                                        </div>
                                        <div class="mt-auto messagedate text-right">
                                          <small>(<%= message.created_at.strftime("%d/%m/%Y at %H:%M") %>)</small>
                                        </div>
                                      </div>
                                    </div>
                    <% end %>
                                  <div class="reply">
                                    <div class="border-top border-primary d-flex align-items-center justify-items-center">
                                        <div class="ml-3 left w-75 mr-auto pt-3">
                                                <%= simple_form_for [ chatroom, @message ], remote: true do |f| %>
                                                  <%= f.input :content, label: false, placeholder: "Message" %>
                                        </div>
                                                  <%= f.submit :submit, label: 'Go', class:"btn btn-success" %>
                                                <% end %>
                                        <div class="right w-25 text-center">
                                            <%= link_to "<i class=\"far fa-trash-alt\"></i>".html_safe, chatroom_path(chatroom), method: :delete, data: { confirm: "Are you sure?" }, class: "text-danger" %>
                                        </div>
                                    </div>
                                  </div>
                  </div>
          <% end %>
  </div>
</body>

